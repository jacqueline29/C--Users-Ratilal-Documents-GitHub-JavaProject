<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_update_slider_Profile"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/circleimg"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp" />

            </LinearLayout>

            <com.frendz.testingapi.utils.CustomText
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="fonts/Montserrat_Regular.otf"
                android:padding="5dp"
                android:text="USERNAME"
                android:textColor="#2a5ea4"
                android:textSize="15sp" />

            <com.frendz.testingapi.utils.EditTextCustom
                android:id="@+id/activity_profile_edt_Username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtusername"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="fonts/Montserrat_Regular.otf"
                android:padding="15dip"
                android:inputType="textPersonName"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <com.frendz.testingapi.utils.CustomText
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_Username"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="fonts/Montserrat_Regular.otf"
                android:padding="5dp"
                android:text="E-MAIL"
                android:textColor="#2a5ea4"
                android:textSize="15sp" />

            <com.frendz.testingapi.utils.EditTextCustom
                android:id="@+id/activity_profile_edt_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtpassword"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="fonts/Montserrat_Regular.otf"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <com.frendz.testingapi.utils.CustomText
                android:id="@+id/txt_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_Username"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="fonts/Montserrat_Regular.otf"
                android:padding="5dp"
                android:text="MOBILE NO."
                android:textColor="#2a5ea4"
                android:textSize="15sp" />

            <com.frendz.testingapi.utils.EditTextCustom
                android:id="@+id/activity_profile_edt_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtpassword"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="fonts/Montserrat_Regular.otf"
                android:inputType="number"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:maxLength="10"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <com.frendz.testingapi.utils.ButtonCustom
                    android:id="@+id/activity_login_btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="fonts/Montserrat_Regular.otf"
                    android:text="Update Profile"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
